        <modeltype>fueltruck</modeltype>
        <model>Models/GroundServices/FuelTruck/Fuel_Truck_Short_VolvoFM.xml</model>
        <initialcount>5</initialcount>
        <!-- 56 kmh-->
        <maximumspeed>15.5</maximumspeed>
        <acceleration>1.3</acceleration>
    </vehicle>

    <vehicle>
